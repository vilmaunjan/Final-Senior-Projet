<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/car1">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />

    <TextView
        android:id="@+id/txtIsThisYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Terms and Conditions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent id orci ullamcorper, dapibus tortor vitae, cursus velit. Etiam imperdiet nisi eu ipsum vulputate, id rutrum diam pellentesque. Cras gravida turpis mi, ac pulvinar nibh bibendum non. Vivamus dictum lorem vitae leo lacinia, nec sagittis urna consequat. Nam sed augue est. Ut vel ultricies justo. Praesent nec dolor ultrices, aliquam risus eu, interdum mi. Nam consectetur convallis tempus. Aenean ligula augue, eleifend nec sollicitudin bibendum, rhoncus sit amet ex. Quisque in lorem ante. Fusce non tellus vel tellus laoreet vestibulum ac sed neque. Quisque felis ante, scelerisque vehicula libero ac, posuere hendrerit arcu. Quisque aliquam placerat mi ac porttitor. Morbi dapibus ultrices velit, non finibus leo efficitur ac. Fusce in consequat felis. Mauris fermentum porttitor pulvinar. "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:background="@color/colorOpaque"
        android:textStyle="bold"/>




    <TextView
        android:id="@+id/txtUsernameCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Do You Accept?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="NO"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="YES"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</LinearLayout>